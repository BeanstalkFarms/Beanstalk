{
  "printWidth": 100,
  "singleQuote": false,
  "semi": true,
  "trailingComma": "none",
  "plugins": ["prettier-plugin-solidity"],
  "overrides": [
    {
      "files": "*.sol",
      "options": {
        "parser": "solidity-parse",
        "printWidth": 100,
        "tabWidth": 4,
        "useTabs": false,
        "singleQuote": false,
        "bracketSpacing": false
      }
    },
    {
      "files": "projects/subgraph-*/**",
      "options": {
        "printWidth": 140
      }
    }
  ]
}
